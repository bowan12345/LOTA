    <script>
        // Sidebar toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const sidebarOverlay = document.getElementById('sidebarOverlay');
            
            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('show');
                sidebarOverlay.style.display = sidebar.classList.contains('show') ? 'block' : 'none';
            });
            
            sidebarOverlay.addEventListener('click', function() {
                sidebar.classList.remove('show');
                sidebarOverlay.style.display = 'none';
            });
            
            // Close sidebar on window resize
            window.addEventListener('resize', function() {
                if (window.innerWidth >= 992) {
                    sidebar.classList.remove('show');
                    sidebarOverlay.style.display = 'none';
                }
            });
                 });
         
                   // Set active navigation based on current page
          function setActiveNavigation() {
              const currentPath = window.location.pathname.toLowerCase();
              const allNavLinks = document.querySelectorAll('#sidebar .nav-link, #sidebar button.nav-link');
              
              // Admin navigation elements
              const manageProgramsCollapse = document.getElementById('manageProgramsCollapse');
              const manageProgramsToggle = document.getElementById('manageProgramsToggle');
              const manageCoursesCollapse = document.getElementById('manageCoursesCollapse');
              const manageCoursesToggle = document.getElementById('manageCoursesToggle');
              
              // Tutor navigation elements (removed - no longer using dropdown)
              
              let hasActiveProgramsSubMenu = false;
              let hasActiveCoursesSubMenu = false;
              
              // Reset all navigation items first
              allNavLinks.forEach(item => {
                  item.classList.remove('active', 'bg-primary', 'text-white');
                  item.classList.add('text-dark');
              });
              
              // Check all navigation links for matches
              allNavLinks.forEach((link) => {
                  // Skip the dropdown toggle buttons for href checking
                  if (link.id === 'manageProgramsToggle' || link.id === 'manageCoursesToggle') {
                      return;
                  }
                  
                  // Get the href and normalize it
                  const href = link.getAttribute('href');
                  
                  if (href && href !== '#') {
                      let normalizedHref = href.toLowerCase();
                      
                      // Create more specific matching logic
                      let isMatch = false;
                      
                      // Exact match first, then fallback to contains
                      if (normalizedHref === currentPath) {
                          isMatch = true;
                      } else {
                          // More specific matching for different areas
                          if (currentPath.startsWith('/admin/')) {
                              // Admin area matching
                              if (normalizedHref.includes('/admin/course') && currentPath.includes('/admin/course') && 
                                  !normalizedHref.includes('courseoffering') && !currentPath.includes('courseoffering')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/admin/course/courseoffering') && currentPath.includes('/admin/course/courseoffering')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/admin/trimester') && currentPath.includes('/admin/trimester')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/admin/qualification') && currentPath.includes('/admin/qualification')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/admin/assessment') && currentPath.includes('/admin/assessment')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/admin/student') && currentPath.includes('/admin/student')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/admin/tutor') && currentPath.includes('/admin/tutor')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/admin/home') && currentPath.includes('/admin/home')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/admin/loscore') && currentPath.includes('/admin/loscore')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/admin/loresult') && currentPath.includes('/admin/loresult')) {
                                  isMatch = true;
                              }
                          } else if (currentPath.startsWith('/tutor/')) {
                              // Tutor area matching
                              if (normalizedHref.includes('/tutor/course') && currentPath.includes('/tutor/course')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/tutor/assessment') && currentPath.includes('/tutor/assessment')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/tutor/home') && currentPath.includes('/tutor/home')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/tutor/loscore') && currentPath.includes('/tutor/loscore')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/tutor/loresult') && currentPath.includes('/tutor/loresult')) {
                                  isMatch = true;
                              }
                          } else if (currentPath.startsWith('/student/')) {
                              // Student area matching
                              if (normalizedHref.includes('/student/home') && currentPath.includes('/student/home')) {
                                  isMatch = true;
                              } else if (normalizedHref.includes('/student/loresult') && currentPath.includes('/student/loresult')) {
                                  isMatch = true;
                              }
                          }
                      }
                      
                      if (isMatch) {
                          // Highlight the matched navigation item
                          link.classList.add('active', 'bg-primary', 'text-white');
                          link.classList.remove('text-dark');
                          
                          // Check if this active link is inside the Manage Programs submenu
                          if (link.closest('#manageProgramsCollapse')) {
                              hasActiveProgramsSubMenu = true;
                          }
                          
                          // Check if this active link is inside the Manage Courses submenu
                          if (link.closest('#manageCoursesCollapse')) {
                              hasActiveCoursesSubMenu = true;
                          }
                          
                          
                          // Add active class to parent dropdown if submenu item is active
                          if (link.closest('#manageProgramsCollapse') && manageProgramsToggle) {
                              manageProgramsToggle.classList.add('active');
                          }
                          if (link.closest('#manageCoursesCollapse') && manageCoursesToggle) {
                              manageCoursesToggle.classList.add('active');
                          }
                      }
                  }
              });
              
              // Handle Admin Manage Programs dropdown - always expanded by default
              if (manageProgramsToggle && manageProgramsCollapse) {
                  manageProgramsCollapse.classList.add('show');
                  manageProgramsToggle.setAttribute('aria-expanded', 'true');
              }
              
              // Handle Admin Manage Courses dropdown - always expanded by default
              if (manageCoursesToggle && manageCoursesCollapse) {
                  manageCoursesCollapse.classList.add('show');
                  manageCoursesToggle.setAttribute('aria-expanded', 'true');
              }
              
          }
         
         // Call the function when page loads
         setActiveNavigation();
     </script>

