@using System.Globalization
@using Microsoft.AspNetCore.Identity
@using LOTA.Model

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Tutor Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Welcome Banner -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-success text-white p-4 rounded-3 shadow-sm">
                <div class="row align-items-center">
                    <div class="col-lg-8 col-md-7">
                        @{
                            var user = await UserManager.GetUserAsync(User);
                            var fullName = !string.IsNullOrEmpty(user?.FirstName) && !string.IsNullOrEmpty(user?.LastName) 
                                ? $"{user.FirstName} {user.LastName}" 
                                : user?.UserName ?? "Tutor";
                        }
                        <h1 class="display-6 mb-2 fw-bold">Welcome to LOTA Tutor Portal!</h1>
                        <p class="mb-2 opacity-75 fs-5">Hello, @fullName!</p>
                        <p class="mb-0 opacity-75 fs-6">Today is @DateTime.Now.ToString("yyyy MMMM dd, dddd", new CultureInfo("en-US"))</p>
                    </div>
                    <div class="col-lg-4 col-md-5 text-center text-md-end">
                        <i class="fas fa-chalkboard-teacher fa-4x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Welcome Information Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm welcome-card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="fas fa-info-circle text-info fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0 fw-bold text-info">About LOTA Tutor Portal</h5>
                        </div>
                    </div>
                    <p class="text-muted mb-0">
                        Welcome to the Learning Outcome Tracking and Assessment (LOTA) system. 
                        This portal provides you with tools to manage your courses, assessments, 
                        and track student learning outcomes effectively.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0 fw-bold">
                        <i class="fas fa-rocket text-success me-2"></i>
                        Quick Actions
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-xl-3 col-lg-6 col-md-6">
                            <a asp-area="Tutor" asp-controller="Course" asp-action="Index" class="btn btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4 action-card courses-btn">
                                <i class="fas fa-book fa-3x mb-3"></i>
                                <span class="fw-bold fs-5">View My Courses</span>
                                <small class="text-muted mt-2 text-center">Access and manage your assigned courses</small>
                            </a>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-md-6">
                            <a asp-area="Tutor" asp-controller="Assessment" asp-action="Index" class="btn btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4 action-card assessments-btn">
                                <i class="fas fa-file-alt fa-3x mb-3"></i>
                                <span class="fw-bold fs-5">Manage Assessments</span>
                                <small class="text-muted mt-2 text-center">Create and track assessments</small>
                            </a>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-md-6">
                            <a asp-area="Tutor" asp-controller="LOScore" asp-action="Index" class="btn btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4 action-card loscores-btn">
                                <i class="fas fa-chart-bar fa-3x mb-3"></i>
                                <span class="fw-bold fs-5">LO Scores</span>
                                <small class="text-muted mt-2 text-center">Track student learning outcomes</small>
                            </a>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-md-6">
                            <a asp-area="Tutor" asp-controller="LOResult" asp-action="Index" class="btn btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4 action-card loresults-btn">
                                <i class="fas fa-chart-line fa-3x mb-3"></i>
                                <span class="fw-bold fs-5">LO Results</span>
                                <small class="text-muted mt-2 text-center">View learning outcome results</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .welcome-card {
        transition: all 0.3s ease-in-out;
        border-radius: 12px;
    }
    
    .welcome-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }
    
    .action-card {
        transition: all 0.3s ease-in-out;
        border-radius: 16px;
        min-height: 220px;
        border-width: 2px;
        text-decoration: none;
    }
    
    .action-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        text-decoration: none;
    }
    
    /* Courses button - Teal (#20c997) */
    .courses-btn {
        border: 2px solid #20c997;
        color: #20c997;
        background-color: transparent;
    }
    
    .courses-btn:hover {
        background-color: #20c997;
        border-color: #20c997;
        color: white;
    }
    
    /* Assessments button - Red (#dc3545) */
    .assessments-btn {
        border: 2px solid #dc3545;
        color: #dc3545;
        background-color: transparent;
    }
    
    .assessments-btn:hover {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }
    
    /* LO Scores button - Indigo (#6610f2) */
    .loscores-btn {
        border: 2px solid #6610f2;
        color: #6610f2;
        background-color: transparent;
    }
    
    .loscores-btn:hover {
        background-color: #6610f2;
        border-color: #6610f2;
        color: white;
    }
    
    /* LO Results button - Pink (#d63384) */
    .loresults-btn {
        border: 2px solid #d63384;
        color: #d63384;
        background-color: transparent;
    }
    
    .loresults-btn:hover {
        background-color: #d63384;
        border-color: #d63384;
        color: white;
    }
    
    /* Hover effect for text-muted in all buttons */
    .action-card:hover .text-muted {
        color: rgba(255, 255, 255, 0.8) !important;
    }
    
    .card-header {
        border-radius: 12px 12px 0 0 !important;
    }
    
    .card {
        border-radius: 12px;
    }
    
    @@media (max-width: 768px) {
        .display-6 {
            font-size: 1.5rem;
        }
        
        .fa-4x {
            font-size: 2.5em;
        }
        
        .fa-3x {
            font-size: 2em;
        }
        
        .action-card {
            min-height: 180px;
        }
        
        .fs-5 {
            font-size: 1rem !important;
        }
    }
    
    @@media (max-width: 576px) {
        .action-card {
            min-height: 160px;
        }
        
        .card-body {
            padding: 1rem !important;
        }
    }
</style>
