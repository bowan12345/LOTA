@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LOTA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LOTAWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Custom forgot password page styles -->
    <style>
        body {
            background: linear-gradient(135deg, #198754 0%, #157347 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }
        
        /* Animated background elements */
        body::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: float 20s ease-in-out infinite;
            z-index: 0;
        }
        
        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(180deg); }
        }
        
        .forgot-password-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            width: 100%;
            max-width: 480px;
            padding: 3rem 2.5rem;
            margin: 0 auto;
            position: relative;
            z-index: 1;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .forgot-password-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }
        
        .forgot-password-header .logo-container {
            margin-bottom: 1.5rem;
        }
        
        .forgot-password-header .logo-container img {
            width: 90px;
            height: 90px;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid rgba(25, 135, 84, 0.2);
            box-shadow: 0 8px 25px rgba(25, 135, 84, 0.3);
            transition: transform 0.3s ease;
        }
        
        .forgot-password-header .logo-container img:hover {
            transform: scale(1.05);
        }
        
        .forgot-password-header h1 {
            color: #333;
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 2rem;
            background: linear-gradient(135deg, #198754 0%, #157347 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .forgot-password-header p {
            color: #666;
            margin: 0;
            font-size: 1rem;
            line-height: 1.5;
        }
        
        .forgot-password-content {
            position: relative;
        }
        
        .forgot-password-content h1 {
            color: #333;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 1rem;
            text-align: center;
        }
        
        .forgot-password-content p {
            color: #666;
            font-size: 1rem;
            line-height: 1.6;
            text-align: center;
            margin-bottom: 2rem;
        }
        
        /* Success/Info styling for confirmation page */
        .success-message {
            background: rgba(40, 167, 69, 0.1);
            border: 1px solid rgba(40, 167, 69, 0.2);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: center;
            animation: slideUp 0.6s ease-out;
        }
        
        .success-message i {
            color: #28a745;
            font-size: 2rem;
            margin-bottom: 1rem;
            display: block;
            animation: bounce 1s ease-in-out;
        }
        
        .success-message h3 {
            color: #28a745;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }
        
        .success-message p {
            color: #666;
            margin: 0;
            font-size: 1rem;
        }
        
        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }
        
        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .back-to-login {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid rgba(102, 126, 234, 0.1);
        }
        
        .back-to-login a {
            color: #198754;
            text-decoration: none;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            padding: 10px 20px;
            border: 2px solid rgba(25, 135, 84, 0.3);
            border-radius: 8px;
            background: rgba(25, 135, 84, 0.05);
        }
        
        .back-to-login a:hover {
            color: #157347;
            text-decoration: none;
            transform: translateY(-2px);
            background: rgba(25, 135, 84, 0.1);
            border-color: #198754;
            box-shadow: 0 5px 15px rgba(25, 135, 84, 0.2);
        }
        
        .back-to-login a i {
            transition: transform 0.3s ease;
        }
        
        .back-to-login a:hover i {
            transform: translateX(-3px);
        }
        
        /* Responsive design */
        @@media (max-width: 576px) {
            .forgot-password-container {
                padding: 2rem 1.5rem;
                margin: 0 10px;
                border-radius: 15px;
            }
            
            .forgot-password-header h1 {
                font-size: 1.6rem;
            }
            
            .forgot-password-content h1 {
                font-size: 1.5rem;
            }
            
            .success-message {
                padding: 1.25rem;
            }
            
            .success-message i {
                font-size: 1.75rem;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="forgot-password-container">
                    <div class="forgot-password-header">
                        <div class="logo-container">
                            <img src="~/image/logo.jpg" alt="LOTA Logo">
                        </div>
                        <h1>LOTA</h1>
                    </div>
                    <div class="forgot-password-content">
                        <h1>@ViewData["Title"]</h1>
                        
                        <div class="success-message">
                            <i class="fas fa-check-circle"></i>
                            <h3>Email Sent Successfully!</h3>
                            <p>Please check your email to reset your password.</p>
                        </div>
                        
                        <div class="back-to-login">
                            <a href="/Identity/Account/Login">
                                <i class="fas fa-arrow-left"></i>
                                Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
