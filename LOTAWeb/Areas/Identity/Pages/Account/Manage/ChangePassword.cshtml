    .container-fluid h2.change-password-title {
        color: #000000 !important;
    }
    .container-fluid h2.change-password-title i {
        color: #000000 !important;
    }
    .container-fluid .fw-bold.change-password-title {
        color: #000000 !important;
    }
    .container-fluid .fw-bold.change-password-title i {
        color: #000000 !important;
    }
    .container-fluid h2.change-password-title span {
        color: #000000 !important;
    }
</style>
