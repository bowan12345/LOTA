<!-- Dashboard Statistics JavaScript -->
<script>
/**
 * Dashboard Statistics Management
 * Handles loading and updating dashboard statistics
 */

class DashboardStats {
    constructor() {
        this.statsEndpoint = '/Admin/Home/GetDashboardStats';
        this.refreshInterval = 30000; // 30 seconds
        this.init();
    }

    init() {
        this.loadStats();
        this.setupAutoRefresh();
        this.setupErrorHandling();
    }

    async loadStats() {
        try {
            this.showLoadingState();
            
            const response = await fetch(this.statsEndpoint);
            
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            
            const result = await response.json();
            
            if (result.success) {
                this.updateStatsDisplay(result.data);
            } else {
                this.showErrorState();
            }
        } catch (error) {
            this.showErrorState();
        }
    }

    updateStatsDisplay(stats) {
        const elements = {
            totalTutors: document.getElementById('totalTutors'),
            totalCourses: document.getElementById('totalCourses'),
            totalStudents: document.getElementById('totalStudents')
        };

        // Try both uppercase and lowercase property names
        const tutorCount = stats.TotalTutors ?? stats.totalTutors ?? 0;
        const courseCount = stats.TotalCourses ?? stats.totalCourses ?? 0;
        const studentCount = stats.TotalStudents ?? stats.totalStudents ?? 0;

        if (elements.totalTutors) {
            elements.totalTutors.textContent = tutorCount;
        }
        if (elements.totalCourses) {
            elements.totalCourses.textContent = courseCount;
        }
        if (elements.totalStudents) {
            elements.totalStudents.textContent = studentCount;
        }
    }

    showLoadingState() {
        const elements = ['totalTutors', 'totalCourses', 'totalStudents'];
        elements.forEach(id => {
            const element = document.getElementById(id);
            if (element) {
                element.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            }
        });
    }

    showErrorState() {
        const elements = ['totalTutors', 'totalCourses', 'totalStudents'];
        elements.forEach(id => {
            const element = document.getElementById(id);
            if (element) {
                element.innerHTML = '<i class="fas fa-exclamation-triangle text-danger" title="Failed to load data"></i>';
            }
        });
    }

    animateCounters() {
        const counters = document.querySelectorAll('#totalTutors, #totalCourses, #totalStudents');
        
        counters.forEach(counter => {
            if (counter && !counter.querySelector('.fa-spinner') && !counter.querySelector('.fa-exclamation-triangle')) {
                counter.style.transform = 'scale(1.1)';
                counter.style.transition = 'transform 0.3s ease-in-out';
                
                setTimeout(() => {
                    counter.style.transform = 'scale(1)';
                }, 300);
            }
        });
    }

    setupAutoRefresh() {
        setInterval(() => {
            this.loadStats();
        }, this.refreshInterval);
    }

    setupErrorHandling() {
        // Add retry functionality on click
        document.addEventListener('click', (e) => {
            if (e.target.closest('#totalTutors, #totalCourses, #totalStudents')) {
                const element = e.target.closest('#totalTutors, #totalCourses, #totalStudents');
                if (element.querySelector('.fa-exclamation-triangle')) {
                    this.loadStats();
                }
            }
        });
    }

    // Public method to manually refresh stats
    refresh() {
        this.loadStats();
    }
}

// Initialize dashboard stats when DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
    // Check if elements exist before initializing
    const requiredElements = ['totalTutors', 'totalCourses', 'totalStudents'];
    const missingElements = requiredElements.filter(id => !document.getElementById(id));
    
    if (missingElements.length > 0) {
        return;
    }
    
    try {
        window.dashboardStats = new DashboardStats();
    } catch (error) {
        // Silent error handling
    }
});

// Export for potential use in other modules
if (typeof module !== 'undefined' && module.exports) {
    module.exports = DashboardStats;
}


</script>

