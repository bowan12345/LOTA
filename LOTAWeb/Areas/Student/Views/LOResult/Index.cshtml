@{
    ViewData["Title"] = "Learning Outcome Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark mb-0">
            <i class="fas fa-chart-line text-success me-2"></i>
            Learning Outcome Results
        </h2>
    </div>

    <!-- Student LO Results Content -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center py-5">
                        <i class="fas fa-chart-line fa-4x text-success mb-3"></i>
                        <h5 class="fw-bold text-dark mb-3">Your Learning Outcome Results</h5>
                        <p class="text-muted mb-4">
                            View your academic performance and learning outcome achievements across all enrolled courses.
                        </p>
                        <div class="alert alert-info border-0">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> This feature is currently under development. Your learning outcome results will be available here once implemented.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
