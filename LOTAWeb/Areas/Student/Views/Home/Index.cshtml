@using System.Globalization
@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Welcome Banner -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-success text-white p-4 rounded-3 shadow-sm">
                <div class="row align-items-center">
                    <div class="col-lg-8 col-md-7">
                        <h1 class="display-6 mb-2 fw-bold">Welcome to LOTA Student Portal!</h1>
                        <p class="mb-0 opacity-75 fs-5">Today is @DateTime.Now.ToString("yyyy MMMM dd, dddd", new CultureInfo("en-US"))</p>
                    </div>
                    <div class="col-lg-4 col-md-5 text-center text-md-end">
                        <i class="fas fa-graduation-cap fa-4x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About LOTA Student Portal -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold text-success mb-3">
                        <i class="fas fa-info-circle me-2"></i>
                        About LOTA Student Portal
                    </h5>
                    <p class="card-text text-muted mb-3">
                        The LOTA (Learning Outcome Tracking and Assessment) Student Portal provides you with easy access to your academic progress and learning outcome results. Here you can view your performance across different assessments and track your learning achievements.
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="fw-semibold text-dark mb-2">
                                <i class="fas fa-chart-line text-success me-2"></i>
                                View Your Results
                            </h6>
                            <p class="text-muted small mb-3">
                                Access your learning outcome results and track your academic progress across all enrolled courses.
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-semibold text-dark mb-2">
                                <i class="fas fa-calendar-check text-success me-2"></i>
                                Track Progress
                            </h6>
                            <p class="text-muted small mb-3">
                                Monitor your performance and identify areas for improvement in your learning journey.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
